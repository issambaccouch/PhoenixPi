{% extends "adminbase.html.twig" %}
{% block body %}


    <div class="container">
    <section class="card card-admin">
        <header class="card-header">


            <h2 class="card-title" align="center">PROMOTIONS</h2>
        </header>
        <div class="card-body">
            <div class="row">
                <div class="col-sm-6">
                    <div class="mb-3">
                        <button id="addToTable" class="btn btn-primary"><a href="{{path('add_events_admin')}}" style="color: #fafffb">Ajouter promotion</a> <i class="fa fa-plus"></i></button>
                    </div>
                </div>
            </div>
            <table class="table table-bordered table-striped mb-0" id="datatable-editable">
                <thead>
                <tr>
                    <th>Pourcentage</th>
                    <th>date fin</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for promotion in promos%}
                    <tr data-item-id="1">
                        <td> {{ promotion.pourcentage}} </td>
                        <td>{{ promotion.datefinpro|date }}</td>
                        <td class="actions">
                            <a href="{{ path('update_promo_admin',{'id':promotion.idpromo}) }}" class="on-default edit-row"><i class="fa fa-pencil"></i></a>
                            <a  href="{{ path('delete_promo_admin',{'id':promotion.idpromo}) }}" class="on-default remove-row"><i class="fa fa-trash-o"></i></a>
                        </td>
                    </tr>
                {%endfor%}
            </table>
        </div>
    </section>
    </div>{% endblock %}