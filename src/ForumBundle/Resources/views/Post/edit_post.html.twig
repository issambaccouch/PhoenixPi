{% extends "@Forum/layout.html.twig" %}

{% block title %}{% endblock %}

{% block stylesheets %}
   <link rel="stylesheet" href="{{ asset('bundles/forum/css/post.css') }}" type="text/css" />
{% endblock %}

{% block body %}
<div class="container">
<h1 class="text-center">{{ 'forum.post.editpost'|trans }}</h1>
  
  <ul id="postsList" class="list-unstyled">

    {% if postpreview %}
        {% include 'ForumBundle:Post:preview-post.html.twig' %}
    {% endif %}
    
  </ul>

  {% if form is not null %}
  <h2>form</h2>

  
   {% include 'ForumBundle:Form:Post.html.twig' %}

  {% endif %}
  <div class="clearfix"></div>

</div>
{% endblock %}


{% block js %}
  {% if app.user %}
      <script src="{{ asset('bundles/forum/js/post.js') }}"></script>
    {% if is_granted('ROLE_MODERATOR') %}
      <script src="{{ asset('bundles/forum/js/moderator/post.js') }}"></script>   
    {% endif %}
  {% endif %}
{% endblock %}
