{% extends "base.html.twig" %}
{% block body %}


    <div class="container">
    <section class="card card-admin">
        <header class="card-header">


            <h2 class="card-title" align="center">EVENEMENTS</h2>
        </header>
        <div class="header-search d-none d-md-block" >
            <form  method="post">
                <div class="input-group">
                    <input type="text" class="form-control" name="titre" id="q" placeholder="Search..." required="">
                    <span class="input-group-btn">
													<button class="btn btn-light" type="submit"><i class="fa fa-search"></i></button>
												</span>
                </div>
            </form>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-sm-6">
                    <div class="mb-3">
                        <button id="addToTable" class="btn btn-primary"><a href="{{path('add_events')}}" style="color: #fafffb">Ajouter evenement</a> <i class="fa fa-plus"></i></button>
                    </div>
                </div>
            </div>
            <table class="table table-bordered table-striped mb-0" id="datatable-editable">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Lieu</th>
                    <th>Capacite</th>
                    <th>Date de debut</th>
                    <th>Date de fin</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for evenement in evenements%}
                    <tr data-item-id="1">
                        <td> {{ evenement.nomev }} </td>
                        <td>{{ evenement.lieu }}</td>
                        <td>{{ evenement.nbrparticipants }}</td>
                        <td>{{ evenement.datedebut|date }}</td>
                        <td>{{ evenement.datefin|date }}</td>
                        <td class="actions">
                            <a href="{{ path('update_events',{'id':evenement.idev}) }}" class="on-default edit-row"><i class="fa fa-pencil"></i></a>
                            <a  href="{{ path('delete_events',{'id':evenement.idev}) }}" class="on-default remove-row"><i class="fa fa-trash-o"></i></a>
                        </td>
                    </tr>
                {%endfor%}
            </table>
        </div>
    </section>
    </div>{% endblock %}