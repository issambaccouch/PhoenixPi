{% extends "base.html.twig" %}
{% block body %}
    <div role="main" class="main shop">

        <div class="container">

            <div class="row">
                <div class="col">
                    <hr class="tall mt-4">
                </div>
            </div>

            <div class="row">
                <div class="col-lg-9">
                    <div class="row">
                        <div class="col-lg-6">
                            <h2 class="card-title"><strong>LISTE DES WORKSHOPS</strong></h2>
                                <p>Showing 1â€“6 of 10 results.</p>
                            <div class="mb-3">
    {% if is_granted('ROLE_FORMATEUR') %}

        <button id="addToTable" class="btn"><a href="{{path('create')}}">Add WORKSHOP</a> <i class="fa fa-plus"></i></button>
        {% endif %}
                            </div>

                        </div>
                    </div>
                    <div class="masonry-loader masonry-loader-loaded">
                        <div class="row products product-thumb-info-list mt-3" data-plugin-masonry>
                            {% for w in workshops %}

                                <div class="col-sm-6 col-lg-4 product">
                                    {% if( w.datews|date('Y-m-d')>datejour|date('Y-m-d') ) %}

                                        <span class="onsale" >NEW!</span>
                                    {% endif %}

                                            <span class="product-thumb-info">
									<a href="shop-cart.html" class="add-to-cart-product">
									</a>


											<a href="{{ path('detail',{'idws':w.idws}) }}">
												<span class="product-thumb-info-image">
													<span class="product-thumb-info-act">
														<span class="product-thumb-info-act-right"><em><i class="fa fa-plus"></i> Details</em></span>
													</span>
													<img alt="" class="img-fluid" src="{{asset('styling/img/logos/workwork.jpg')}}">
												</span>
											</a>
											<span class="product-thumb-info-content">
												<a href="{{ path('detail',{'idws':w.idws}) }}">
													<h4 class="heading-primary">{{w.nomws}}</h4>
													<span class="price">
														 <center><span class="amount">{{w.lieu}}</span></center></span>
                                {% if is_granted('ROLE_FORMATEUR') %}
                                                        <a href="{{ path('update',{'idws':w.idws}) }}" class="on-default edit-row"><i class="fa fa-pencil"></i></a>
                                                        <a  href="{{ path('delete',{'idws':w.idws}) }}" class="on-default remove-row"><i class="fa fa-trash-o"></i></a>
                                {% endif %}


													</span>
												</a>
											</span>
										</span>


                                </div>
                            {% endfor %}
                        </div>








                    </div>

                </div>
                <div class="col-lg-3">
                    <aside class="sidebar">

                        <form>
                            <div class="input-group input-group-4">
                                <input class="form-control" placeholder="Search..." name="s" id="s" type="text">
                                <span class="input-group-btn">
											<button type="submit" class="btn btn-primary btn-lg"><i class="fa fa-search"></i></button>
										</span>
                            </div>
                        </form>

                        <hr>



                        <hr>



                    </aside>
                </div>
            </div>
        </div>

    </div>
{% endblock %}